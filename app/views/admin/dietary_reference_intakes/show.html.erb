<div id="admin-contents">
  <h3>DRI : ID<%= @dri.id %></h3>

  <div>
    <%= link_to '削除', admin_dietary_reference_intake_path(@dri), method: :delete, data: { confirm: "DRI (id:#{@dri.id})を削除する？" }, class: "admin-btn" %>
  </div>
  <table class="admin-table">
    <t-body>
      <% @dri.attributes.each do |d| %>
        <tr class="admin-t-row">
          <th class="admin-t-head"><%= DietaryReferenceIntake.human_attribute_name(d[0]) %></th>
          <td class="admin-t-data"><%= d[1] %></td>
        </tr>
      <% end %>
    </t-body>
  </table>
</div>