<div id="admin-contents">
  <h3>ユーザー編集 : <%= @user.name %></h3>

  <div class="admin-form">
    <%= form_with model: @user, url: admin_user_path, local: true do |f| %>
      <%= render 'admin/shared/error_messages', object: f.object %>
      <div class="admin-form-group">
        <%= f.label :name, class: "admin-form-label" %><br>
        <%= f.text_field :name, class: "admin-form-text" %>
      </div>
      <div class="admin-form-group">
        <%= f.label :email, class: "admin-form-label" %><br>
        <%= f.email_field :email, class: "admin-form-text" %>
      </div>
      <div class="admin-form-group">
        <%= f.label :password, class: "admin-form-label" %><br>
        <%= f.password_field :password, class: "admin-form-text" %>
      </div>
      <div class="admin-form-group">
        <%= f.label :password_confirmation, class: "admin-form-label" %><br>
        <%= f.password_field :password_confirmation, class: "admin-form-text" %>
      </div>
      <div class="admin-form-group">
        <%= f.label :gender, class: "admin-form-label" %><br>
        <%= f.select :gender, User.genders_i18n.invert, {}, class: "admin-form-select" %>
      </div>
      <div class="admin-form-group">
        <%= f.label :birth, class: "admin-form-label" %><br>
        <%= f.date_field :birth, class: "admin-form-text" %>
      </div>
      <div class="admin-form-group">
        <%= f.label :height, class: "admin-form-label" %><br>
        <%= f.number_field :height, class: "admin-form-text" %>
      </div>
      <div class="admin-form-group">
        <%= f.label :weight, class: "admin-form-label" %><br>
        <%= f.number_field :weight, class: "admin-form-text" %>
      </div>
      <div class="admin-form-group">
        <%= f.label :role, class: "admin-form-label" %><br>
        <%= f.select :role, User.roles_i18n.invert, {}, class: "admin-form-select" %>
      </div>
      <%= f.submit class: "admin-form-btn" %>
    <% end %>
  </div>
</div>